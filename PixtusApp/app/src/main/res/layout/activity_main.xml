<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context=".ui.MainActivity">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="2">
			
			<android.support.constraint.ConstraintLayout
				android:id="@+id/linearLayout"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				tools:context=".ui.MainActivity">
				
				<View
					android:id="@+id/view2"
					android:layout_width="match_parent"
					android:layout_height="2dp"
					android:layout_marginTop="156dp"
					android:background="#5dbb96"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent" />
				
				<ImageView
					android:id="@+id/imageView11"
					android:layout_width="wrap_content"
					android:layout_height="156dp"
					android:layout_marginBottom="8dp"
					android:scaleType="fitXY"
					app:layout_constraintBottom_toBottomOf="@+id/iv_gif"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent"
					app:srcCompat="@drawable/rectangle" />
				
				<ImageView
					android:id="@+id/iv_gif"
					android:layout_width="200dp"
					android:layout_height="200dp"
					android:layout_marginTop="60dp"
					android:scaleType="fitXY"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent" />
			
			
			</android.support.constraint.ConstraintLayout>
		</LinearLayout>
		
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="3">
			
			<TextView
				android:id="@+id/tv_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="6dp"
				android:fontFamily="@font/notosans_medium"
				android:text="픽미픽미픽미"
				android:textColor="@color/colorBlack"
				android:textSize="16sp" />
			
			<ImageView
				android:id="@+id/stats_bar"
				android:layout_width="250dp"
				android:layout_height="16dp"
				android:layout_below="@+id/tv_title"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="12dp"
				android:background="@drawable/bg_test" />
			
			<TextView
				android:id="@+id/tv_calorie"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/stats_bar"
				android:layout_alignLeft="@+id/stats_bar"
				android:layout_marginTop="8dp"
				android:fontFamily="@font/notosans_regular"
				android:text="2,300kcal "
				android:textColor="@color/colorPrimary" />
			
			<TextView
				android:id="@+id/tv_total_calorie"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/stats_bar"
				android:layout_alignRight="@+id/stats_bar"
				android:layout_marginTop="8dp"
				android:fontFamily="@font/notosans_regular"
				android:text="3,300kcal"
				android:textColor="@color/C_d9d9d9" />
			
			<ImageView
				android:id="@+id/view_dot"
				android:layout_width="match_parent"
				android:layout_height="5dp"
				android:layout_below="@+id/tv_calorie"
				android:layout_alignLeft="@+id/stats_bar"
				android:layout_alignRight="@+id/stats_bar"
				android:layout_marginTop="20dp"
				android:background="@drawable/line_dot"
				android:layerType="software"></ImageView>
			
			<TextView
				android:id="@+id/tv_date"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/view_dot"
				android:layout_alignLeft="@+id/stats_bar"
				android:layout_marginTop="12dp"
				android:fontFamily="@font/notosans_medium"
				android:text="06.30 /sun"
				android:textColor="@color/colorPrimary" />
			
			
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/tv_date"
				android:layout_alignLeft="@+id/stats_bar"
				android:layout_alignRight="@+id/stats_bar"
				android:layout_marginTop="10dp"
				android:orientation="vertical">
				
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="40dp">
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:fontFamily="@font/notosans_medium"
						android:padding="4dp"
						android:text="걷기"
						android:textColor="@color/colorBlack" />
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:fontFamily="@font/notosans_regular"
						android:padding="4dp"
						android:text="2100Kcal"
						android:textColor="@color/colorPrimary" />
					
					<View
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:layout_alignParentBottom="true"
						android:background="@color/C_d9d9d9"></View>
				</RelativeLayout>
				
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:layout_marginTop="4dp">
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:fontFamily="@font/notosans_medium"
						android:padding="4dp"
						android:text="달리"
						android:textColor="@color/colorBlack" />
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:fontFamily="@font/notosans_regular"
						android:padding="4dp"
						android:text="2100Kcal"
						android:textColor="@color/colorPrimary" />
					
					<View
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:layout_alignParentBottom="true"
						android:background="@color/C_d9d9d9"></View>
				</RelativeLayout>
				
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="40dp"
					android:layout_marginTop="4dp">
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:fontFamily="@font/notosans_medium"
						android:padding="4dp"
						android:text="자전거"
						android:textColor="@color/colorBlack" />
					
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_centerVertical="true"
						android:fontFamily="@font/notosans_regular"
						android:padding="4dp"
						android:text="2100Kcal"
						android:textColor="@color/colorPrimary" />
					
					<View
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:layout_alignParentBottom="true"
						android:background="@color/C_d9d9d9"></View>
				</RelativeLayout>
			</LinearLayout>
		</RelativeLayout>
	
	</LinearLayout>
</FrameLayout>