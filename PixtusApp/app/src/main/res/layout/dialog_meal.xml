<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/constraintLayout"
	android:layout_width="280dp"
	android:layout_height="350dp">
	
	<LinearLayout
		android:id="@+id/linearLayout2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="24dp"
		android:layout_marginTop="24dp"
		android:layout_marginEnd="24dp"
		android:orientation="vertical"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">
		
		<TextView
			android:id="@+id/textView4"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="2sp"
			android:text="7월 6일"
			android:textColor="#5dbb96"
			android:textSize="12sp" />
		
		<TextView
			android:id="@+id/textView5"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="12sp"
			android:text="당신의 식사는 어땠나요?"
			android:textColor="#de000000"
			android:textSize="16sp" />
		
		<TextView
			android:id="@+id/textView6"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="22dp"
			android:text="더욱 정확한 칼로리 계산을 위해\n오늘 하루 몇 끼를 섭취했는지 알려주세요."
			android:textSize="12sp" />
	
	</LinearLayout>
	
	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingTop="33dp"
		android:paddingBottom="20dp"
		app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
		tools:layout_editor_absoluteX="-16dp">
		
		<ImageButton
			android:id="@+id/btn_dialog_meal_sub"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_marginEnd="20dp"
			android:backgroundTint="#ffffff"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toStartOf="@+id/tv_dialog_meal"
			app:layout_constraintTop_toTopOf="parent"
			app:srcCompat="@mipmap/btn_minus_un" />
		
		<ImageButton
			android:id="@+id/btn_dialog_meal_add"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_marginStart="20dp"
			android:backgroundTint="#ffffff"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toEndOf="@+id/tv_dialog_meal"
			app:layout_constraintTop_toTopOf="parent"
			app:srcCompat="@drawable/btn_plus_active" />
		
		<TextView
			android:id="@+id/tv_dialog_meal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="24dp"
			android:text="1"
			android:textSize="20sp"
			app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />
		
		<LinearLayout
			android:id="@+id/linearLayout3"
			android:layout_width="48dp"
			android:layout_height="1dp"
			android:layout_marginTop="10dp"
			android:background="#42000000"
			android:orientation="vertical"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">
		
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/linearLayout4"
			android:layout_width="48dp"
			android:layout_height="1dp"
			android:background="#42000000"
			android:orientation="vertical"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"></LinearLayout>
	
	</android.support.constraint.ConstraintLayout>
	
	<ImageButton
		android:id="@+id/btn_dialog_meal_confirm"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:layout_marginBottom="8dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:srcCompat="@drawable/btn_popup_confirm"
		android:backgroundTint="#0000"/>
	
	<ImageButton
		android:id="@+id/btn_dialog_meal_un"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:layout_marginBottom="8dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/btn_dialog_meal_confirm"
		app:srcCompat="@drawable/btn_popup_un"
		android:backgroundTint="#0000"/>

</android.support.constraint.ConstraintLayout>